<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile_password.ProfilePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="128dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="vertical">


            <com.untillness.borwita.widgets.AppPasswordEditText
                android:id="@+id/field_password_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:hint="Masukkan Kata Sandi Lama">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_password_old"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"/>

            </com.untillness.borwita.widgets.AppPasswordEditText>

            <com.untillness.borwita.widgets.AppPasswordEditText
                android:id="@+id/field_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:hint="Masukkan Kata Sandi Baru">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_password_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"/>

            </com.untillness.borwita.widgets.AppPasswordEditText>
v
            <com.untillness.borwita.widgets.AppPasswordEditText
                android:id="@+id/field_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:hint="Ketik Ulang Kata Sandi Baru">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"/>

            </com.untillness.borwita.widgets.AppPasswordEditText>


            <Button
                android:id="@+id/button_save_profile"
                style="?attr/materialButtonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp"
                android:text="Simpan" />
        </LinearLayout>
    </LinearLayout>



</androidx.core.widget.NestedScrollView>